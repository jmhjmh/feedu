<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/ly_shang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7083D7"
            android:orientation="horizontal"
            android:paddingLeft="0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="欢迎 学号: "
                android:textColor="#FFFFFF"
                android:textSize="10pt" >
            </TextView>

            <TextView
                android:id="@+id/userid_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10pt" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 姓名: "
                android:textColor="#FFFFFF"
                android:textSize="10pt" >
            </TextView>

            <TextView
                android:id="@+id/username_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="10pt" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#7083D7"
            android:orientation="horizontal"
            android:paddingLeft="0dip" >

            <TextView
                android:id="@+id/sessionid_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7083D7"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/getcj"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/home_cjcx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试成绩查询"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/getkb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/home_grkb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="个人课表查询"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/ly_zhong"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ly_shang"
        android:background="#7083D7" />

    <LinearLayout
        android:id="@+id/ly_xia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_zhong"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/getks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_ksdd" />

            <TextView
                android:id="@+id/ksddcx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试地点"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/getinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_djks" />

            <TextView
                android:id="@+id/djkscx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等级考试"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/getby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_lwxt" />

            <TextView
                android:id="@+id/lwxtxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="论文选题"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/gettx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_txxx" />

            <TextView
                android:id="@+id/wdtxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的头像"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>